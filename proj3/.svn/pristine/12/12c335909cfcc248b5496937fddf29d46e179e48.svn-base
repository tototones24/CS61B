        @Override
        public double getWeight(int u, int v) {
            // return (double) _Graph.getLabel(u, v);
            if (u == 5 && v == 6) {
                return 30.0;
            }
            if (u == 5 && v == 3) {
                return 9.1;
            }
            if (u == 4 && v == 5) {
                return 11.2;
            }
            if (u == 4 && v == 3) {
                return 102.0;
            }
            if (u == 4 && v == 2) {
                return 12.2;
            }
            if (u == 2 && v == 3) {
                return 6.5;
            }
            if (u == 4 && v == 1) {
                return 0.1;
            }
            return 0;
        }
        @Override
        protected double estimatedDistance(int v) {
            // return (double) _Graph.getLabel(v);
            if (v == 4) {
                return 102.0;
            }
            if (v == 2) {
                return 4;
            }
            if (v == 5) {
                return 5.1;
            }
            if (v == 6) {
                return 40.0;
            }
            if (v == 1) {
                return 500.0;
            }
            return 0;
        }
    }

